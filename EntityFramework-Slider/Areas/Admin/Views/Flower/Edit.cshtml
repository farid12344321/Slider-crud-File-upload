@model ExpertHeader
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <span class="text-danger">@ViewBag.error</span>
    <form class="forms-sample" asp-action="Edit" method="post">
        <label for="formFile" class="form-label">Add a new title</label>
        <input type="text" class="form-control" id="customFile" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span> 
        <label for="formFile" class="form-label">Add a new description</label>
        <input type="text" class="form-control" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
