@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Slider";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Image
                          </th>
                          <th> 
                            Status
                          </th>
                          <th>
                            Operations
                          </th>
                         
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var slider in Model)
                          {
                             <tr>
                               <td class="py-1"> 
                                    <img src="~/img/@slider.Image" style="width:150px;height:70px;border-radius:none;" alt="image"/>
                               </td>

                                <td>  
                                    @if (slider.SoftDelete)
                                    {
                                       <div class="deActive-status"></div>
                                    }else{
                                       <div class="active-status"></div>
                                    }
                                
                                
                               </td>
                          <td style="display:flex;gap:7px;">
                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Info</a>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@slider.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                          </td>
                          </tr>
                          }
                        
                        
                      </tbody>
                    </table>
                  </div>
</div>

